%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag sessions_path, class: "form-horizontal" do
        %header
          %h1 Sign in
        %fieldset
          .form_group
            .row
              .col-sm-6
                = label_tag :email, "Email Address"
                = email_field_tag :email, "#{params[:email]}", class: 'form-control'
          .form_group
            .row
              .col-sm-6
                = label_tag :password
                = password_field_tag :password, "#{params[:password]}", class: 'form-control'
        %br
        %fieldset.form-group.action
          %input(type="submit" value="Sign in" class="btn btn-danger btn-large")
          = link_to "Forgot password?" , forgot_password_path